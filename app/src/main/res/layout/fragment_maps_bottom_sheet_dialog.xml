<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/maps_dialog_name_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/darker_maroon"
            android:fontFamily="@font/roboto"
            android:paddingLeft="25dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/maps_dialog_directions_button"
            app:layout_constraintEnd_toStartOf="@+id/maps_dialog_directions_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/maps_dialog_directions_button"
            tools:text="Movie theater name" />

        <TextView
            android:id="@+id/maps_dialog_theater_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/darker_maroon"
            android:fontFamily="@font/roboto"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="@string/maps_dialog_theater_string"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/maps_dialog_name_tv"
            app:layout_constraintEnd_toStartOf="@+id/maps_dialog_distance_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maps_dialog_name_tv" />

        <TextView
            android:id="@+id/maps_dialog_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:paddingLeft="25dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:drawableLeftCompat="@drawable/bottom_nav_location_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maps_dialog_theater_tv"
            tools:text="313 Noodle Ave."
            app:drawableTint="@color/red_313" />

        <ImageView
            android:id="@+id/maps_dialog_directions_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/darker_maroon"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/maps_directions_icon" />

        <TextView
            android:id="@+id/maps_dialog_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darker_maroon"
            android:fontFamily="@font/roboto"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maps_dialog_name_tv"
            tools:text="1.78 mi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
